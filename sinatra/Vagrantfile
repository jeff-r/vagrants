# Two boxes with static ips.
# Each can see the other by name:
# from within snooker, "ping billiards.vagrant.dev" works.
#

Vagrant.configure("2") do |config|
  # Ensure we use our vagrant private key
  config.ssh.insert_key = false
  config.ssh.private_key_path = '~/.vagrant.d/insecure_private_key'

  config.vm.define "snooker" do |machine|
    config.vm.box = "ubuntu/wily64"
    machine.vm.hostname = "snooker.vagrant.dev"
    machine.vm.network :private_network, ip: "192.168.0.42"

    # machine.vm.provision "ansible" do |ansible|
    #   ansible.playbook = "provisioning/playbook.yml"
    #   ansible.sudo = true
    # end
  end

  config.vm.define 'anxs' do |machine|
    machine.vm.box = "ubuntu/trusty64"

    machine.vm.network :private_network, ip: '192.168.0.2'
    machine.vm.hostname = 'pg.vagrant.dev'
    machine.vm.provision 'ansible' do |ansible|
      ansible.playbook = 'postgresql/playbook.yml'
      ansible.sudo = true
      ansible.inventory_path = 'postgresql/vagrant-inventory'
      ansible.host_key_checking = false
    end
  end
end
